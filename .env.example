# =============================================================================
# ARED Edge Substrate Node - Environment Configuration
# =============================================================================

# Node Configuration
NODE_NAME=ared-edge-validator
CHAIN=production
BASE_PATH=/data

# Network
P2P_PORT=30333
RPC_PORT=9944
RPC_CORS=all
RPC_METHODS=safe

# Prometheus
PROMETHEUS_PORT=9615
PROMETHEUS_EXTERNAL=true

# Logging
RUST_LOG=info
RUST_BACKTRACE=1

# Database
INDEXER_DB_URL=postgresql://ared:password@postgres:5432/ared_edge

# TLS (for RPC)
# TLS_CERT_PATH=/certs/server.crt
# TLS_KEY_PATH=/certs/server.key

# Development only
# NODE_KEY=0x...
